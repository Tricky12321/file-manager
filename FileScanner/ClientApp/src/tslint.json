{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "",
      "camelCase"
    ],
    "max-line-length": [
      true,
      {
        "limit": 0,
        "ignore-pattern": "^import [^,]+ from |^export | implements | constructor"
      }
    ]
  }
}
